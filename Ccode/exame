#include <stdio.h>

int main() {
    float num1, num2, num3, average;
    char grade;

    // Input
    printf("Enter 3 numbers: ");
    scanf("%f %f %f", &num1, &num2, &num3);

    // Calculate average
    average = (num1 + num2 + num3) / 3;

    // Determine grade
    if (average >= 90)
        grade = 'A';
    else if (average >= 80)
        grade = 'B';
    else if (average >= 70)
        grade = 'C';
    else if (average >= 60)
        grade = 'D';
    else
        grade = 'F';  // Fail

    // Output
    printf("Average: %.2f\n", average);
    printf("Grade: %c\n", grade);

    return 0;
}
